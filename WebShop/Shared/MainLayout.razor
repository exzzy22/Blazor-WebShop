@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false" Dense="false">
        <div class="inline-list left-aligned">
            <div class="inline">
                <MudText Typo="Typo.h3" Color="Color.Secondary">PC Shop</MudText>
            </div>
            <div class="inline">
                <MudItem>
                    <MudAutocomplete T="string" Label="Search" AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Secondary" Style="color:#FFF" />
                </MudItem>
            </div>

        </div>
        <MudSpacer />
    </MudAppBar>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private MudTheme _theme = new()
        {
            Palette = new Palette
            {
                Primary = "#1E1F29",
                Secondary = "#FFF",
                Info = "#D10024",
                Success = "#E5E5CB",
                Warning = "#FF851B",
                Error = "#F012BE",
                AppbarBackground = "#85144b",
            }
        };
}