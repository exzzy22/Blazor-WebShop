<section class="mail-seccess section">
	<div class="container">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<!-- Error Inner -->
				<div class="success-inner">
					<h1><i class="fa fa-envelope"></i><span>Activation Mail Sent!</span></h1>
					<p>Activation email has been sent to <b>@Email</b> please activate your account and login</p>
					<a href="login" class="primary-btn btn-lg">Login</a>
				</div>
				<!--/ End Error Inner -->
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
</section>

@code {
	[Parameter]
	public string Email { get; set; } = null!;
}