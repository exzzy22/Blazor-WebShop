<!-- NEWSLETTER -->
<div id="newsletter" class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<div class="newsletter">
					<p>Sign Up for the <strong>NEWSLETTER</strong></p>
					<EditForm Model="Model" OnValidSubmit="Subscribe">
						<InputText class="input" type="email" placeholder="Enter Your Email" @bind-Value="Model.Email" />
						<button class="newsletter-btn"><i class="fa fa-envelope"></i> Subscribe</button>
					</EditForm>
					<ul class="newsletter-follow">
						<li>
							<a href="#"><i class="fa fa-facebook"></i></a>
						</li>
						<li>
							<a href="#"><i class="fa fa-twitter"></i></a>
						</li>
						<li>
							<a href="#"><i class="fa fa-instagram"></i></a>
						</li>
						<li>
							<a href="#"><i class="fa fa-pinterest"></i></a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /NEWSLETTER -->

@code {
	[Inject]
	IApiService ApiService { get; set; } = null!;
	SubscribeNewsLetterVM Model { get; set; } = new();

	async Task Subscribe()
	{
		bool result = await ApiService.SubscribeNewsLetter(Model.Email);

		if (result)
			Model = new();
	}
}
