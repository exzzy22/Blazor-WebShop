@using Shared.ConfigurationModels.Configuration;
@using ViewModels;
<!-- product -->
<div class="product">
	<div class="product-img">
		<img src="@(Configuration.ApiImageAddress + Product.Image)" alt="@Product.ShortName">
		<div class="product-label">
			@if (Product.IsDiscounted)
			{
				<span class="sale">-@Product.Discount%</span>
			}
			<span class="new">NEW</span>
		</div>
	</div>
	<div class="product-body">
		<p class="product-category">@Product.Category.Name</p>
		<h3 class="product-name"><a href="#">@Product.ShortName</a></h3>
		<h4 class="product-price">$@(Product.IsDiscounted ? (Product.CalculateDiscountedPrice(Product.Prices.First().Value)) : Product.Prices.First().Value)<del class="product-old-price">@(Product.IsDiscounted ? " $" + Product.Prices.First().Value : "")</del></h4>
		<div class="product-rating">
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
			<i class="fa fa-star"></i>
		</div>
		<div class="product-btns">
			<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
		</div>
	</div>
	<div class="add-to-cart">
		<button class="add-to-cart-btn" @onclick="() => UserState.AddToCart(Product.Id)"><i class="fa fa-shopping-cart"></i> add to cart</button>
	</div>
</div>
<!-- /product -->

@code {
	[Parameter]
	public ProductCarouselVM Product { get; set; } = null!;
	[Inject]
	WebShopConfiguration Configuration { get; set; } = null!;
	[Inject]
	UserState UserState { get; set; } = null!;

}
